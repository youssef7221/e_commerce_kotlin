<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Cart">

    <!-- Vertical LinearLayout to align elements vertically -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image at the top -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/cart" />

        <!-- First Text below the image -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Your cart is empty" />  <!-- Add margin between image and text -->

        <!-- Second Text below the first Text -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/cardview_shadow_start_color"
            android:text="Looks like you have not added anything in your cart. Go ahead and explore top categories." />  <!-- Add margin between texts -->

        <!-- Button below the texts -->
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Explore Products" />  <!-- Add margin between text and button -->

    </LinearLayout>
</FrameLayout>
